<h3 class="text-muted mb-0">
  Rooms
</h3>

<hr class="mt-1">

<% if @rooms.present? %>
  <nav id="room-links" class="nav flex-column">
    <% @rooms.each do |room| %>
      <%= link_to room.name, room_path(room), class: 'nav-link room-nav-link' %>
    <% end %>
  </nav>
<% else %>
  <div  id="room-links" class="text-muted">
    The are no rooms
  </div>
<% end %>

<div class="mt-3">
  <%= link_to new_room_path, id: 'create-room', class: 'btn btn-primary' do %>
    Create a room
  <% end %>
</div>
